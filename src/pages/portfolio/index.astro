---
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Meal Management System',
    description: 'AWS Lambda + DynamoDB を使用した食事記録・栄養管理アプリ。Terraform による IaC 管理。',
    tags: ['AWS Lambda', 'DynamoDB', 'Python', 'Terraform'],
    slug: 'meal-management',
  },
  {
    title: 'Inquiry System',
    description: 'Step Functions による問い合わせ自動処理システム。状態管理と通知の自動化。',
    tags: ['Step Functions', 'Lambda', 'Terraform', 'TypeScript'],
    slug: 'inquiry-system',
  },
  {
    title: 'EdgeShift Platform',
    description: 'Cloudflare Pages + Workers によるエッジ配信基盤。高速なコンテンツ配信を実現。',
    tags: ['Cloudflare', 'Astro', 'TypeScript', 'Terraform'],
    slug: 'edgeshift-platform',
  },
];
---

<BaseLayout title="Portfolio" description="EdgeShift Portfolio - Cloud & AI Projects">
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-3xl font-bold mb-8">Portfolio</h1>

      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h2 class="text-xl font-semibold mb-3">{project.title}</h2>
            <p class="text-gray-600 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
