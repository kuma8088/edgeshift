---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import LectureForm from '../../../../components/admin/LectureForm';
---

<AdminLayout title="レクチャー編集">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a
        href="javascript:history.back()"
        class="text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
      >
        &larr; 戻る
      </a>
    </div>
    <h1 class="text-2xl font-bold text-[var(--color-text)]">レクチャー編集</h1>
    <div class="bg-white rounded-lg p-6 shadow-sm border border-[var(--color-border)]">
      <LectureForm client:load />
    </div>
  </div>
</AdminLayout>
