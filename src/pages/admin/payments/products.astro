---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { AuthProvider } from '../../../components/admin/AuthProvider';
import { ProductList } from '../../../components/admin/ProductList';
---

<AdminLayout title="商品管理">
  <AuthProvider client:load>
    <div class="space-y-6">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-[var(--color-text)]">商品一覧</h1>
        <div class="flex gap-4">
          <a
            href="/admin/payments/billing"
            class="px-6 py-2 border border-[var(--color-border)] text-[var(--color-text-secondary)] rounded-lg hover:bg-[var(--color-bg-tertiary)] transition-colors"
          >
            請求状況
          </a>
          <a
            href="/admin/payments"
            class="px-6 py-2 border border-[var(--color-border)] text-[var(--color-text-secondary)] rounded-lg hover:bg-[var(--color-bg-tertiary)] transition-colors"
          >
            プラン一覧
          </a>
          <a
            href="/admin/payments/products/new"
            class="px-6 py-2 bg-[var(--color-accent)] text-white rounded-lg hover:bg-[var(--color-accent-hover)] transition-colors"
          >
            新規商品作成
          </a>
        </div>
      </div>
      <ProductList client:load />
    </div>
  </AuthProvider>
</AdminLayout>
