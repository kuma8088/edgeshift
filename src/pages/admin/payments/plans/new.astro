---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import PlanNewForm from '../../../../components/admin/PlanNewForm';
---

<AdminLayout title="新規プラン">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a
        href="/admin/payments"
        class="text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
      >
        ← プラン一覧
      </a>
    </div>
    <h1 class="text-2xl font-bold text-[var(--color-text)]">新規プラン作成</h1>
    <div class="bg-white rounded-lg p-6 shadow-sm border border-[var(--color-border)]">
      <PlanNewForm client:load />
    </div>
  </div>
</AdminLayout>
