---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { SessionAuthProvider } from '../../../../components/auth/SessionAuthProvider';
import { SubscriberBillingDetail } from '../../../../components/admin/SubscriberBillingDetail';

export const prerender = false;

const { id } = Astro.params;
---

<AdminLayout title="購読者の請求詳細">
  <SessionAuthProvider client:load requiredRole={['owner', 'admin']}>
    <SubscriberBillingDetail subscriberId={id || ''} client:load />
  </SessionAuthProvider>
</AdminLayout>
