---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { SessionAuthProvider } from '../../../components/auth/SessionAuthProvider';
import { SubscriptionList } from '../../../components/admin/SubscriptionList';
---

<AdminLayout title="購読者の請求状況">
  <SessionAuthProvider client:load requiredRole={['owner', 'admin']}>
    <div class="space-y-6">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-[var(--color-text)]">購読者の請求状況</h1>
        <div class="flex gap-4">
          <a
            href="/admin/payments"
            class="px-6 py-2 border border-[var(--color-border)] text-[var(--color-text-secondary)] rounded-lg hover:bg-[var(--color-bg-tertiary)] transition-colors"
          >
            プラン一覧
          </a>
          <a
            href="/admin/payments/products"
            class="px-6 py-2 border border-[var(--color-border)] text-[var(--color-text-secondary)] rounded-lg hover:bg-[var(--color-bg-tertiary)] transition-colors"
          >
            商品一覧
          </a>
        </div>
      </div>
      <SubscriptionList client:load />
    </div>
  </SessionAuthProvider>
</AdminLayout>
