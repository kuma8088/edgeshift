---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { SessionAuthProvider } from '../../../../components/auth/SessionAuthProvider';
import ProductEditFormWrapper from '../../../../components/admin/ProductEditFormWrapper';
---

<AdminLayout title="商品編集">
  <SessionAuthProvider client:load requiredRole={['owner', 'admin']}>
    <div class="space-y-6">
      <div class="flex items-center gap-4">
        <a
          href="/admin/payments/products"
          class="text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
        >
          ← 商品一覧
        </a>
      </div>
      <h1 class="text-2xl font-bold text-[var(--color-text)]">商品編集</h1>
      <div class="bg-white rounded-lg p-6 shadow-sm border border-[var(--color-border)]">
        <ProductEditFormWrapper client:load />
      </div>
    </div>
  </SessionAuthProvider>
</AdminLayout>
