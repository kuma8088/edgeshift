---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { CouponList } from '../../../../components/admin/CouponList';
---

<AdminLayout title="クーポン管理">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-[var(--color-text)]">クーポン一覧</h1>
      <div class="flex gap-4">
        <a
          href="/admin/payments"
          class="px-6 py-2 border border-[var(--color-border)] text-[var(--color-text-secondary)] rounded-lg hover:bg-[var(--color-bg-tertiary)] transition-colors"
        >
          決済管理
        </a>
        <a
          href="/admin/payments/coupons/new"
          class="px-6 py-2 bg-[var(--color-accent)] text-white rounded-lg hover:bg-[var(--color-accent-hover)] transition-colors"
        >
          新規クーポン作成
        </a>
      </div>
    </div>
    <CouponList client:load />
  </div>
</AdminLayout>
