---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import CampaignEditFormWrapper from '../../../components/admin/CampaignEditFormWrapper';
---

<AdminLayout title="ニュースレター編集">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a
        href="/admin/campaigns"
        class="text-[var(--color-text-secondary)] hover:text-[var(--color-text)] transition-colors"
      >
        ← ニュースレター一覧
      </a>
    </div>
    <h1 class="text-2xl font-bold text-[var(--color-text)]">ニュースレター編集</h1>
    <div class="bg-white rounded-lg p-6 shadow-sm border border-[var(--color-border)]">
      <CampaignEditFormWrapper client:load />
    </div>
  </div>
</AdminLayout>
