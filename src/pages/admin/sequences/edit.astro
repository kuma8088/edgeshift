---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { SessionAuthProvider } from '../../../components/auth/SessionAuthProvider';
import SequenceEditForm from '../../../components/admin/SequenceEditForm';
---

<AdminLayout title="シーケンス編集">
  <SessionAuthProvider client:load requiredRole={['owner', 'admin']}>
    <div class="space-y-6">
      <div>
        <a
          href="/admin/sequences"
          class="text-sm text-[var(--color-accent)] hover:underline"
        >
          ← シーケンス一覧に戻る
        </a>
        <h1 class="text-2xl font-bold text-[var(--color-text)] mt-2">シーケンス編集</h1>
      </div>

      <div class="bg-white rounded-lg p-6 shadow-sm border border-[var(--color-border)]">
        <SequenceEditForm client:load />
      </div>
    </div>
  </SessionAuthProvider>
</AdminLayout>
