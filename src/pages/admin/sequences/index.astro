---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { SessionAuthProvider } from '../../../components/auth/SessionAuthProvider';
import { SequenceList } from '../../../components/admin/SequenceList';
---

<AdminLayout title="シーケンス管理">
  <SessionAuthProvider client:load requiredRole={['owner', 'admin']}>
    <div class="space-y-6">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-[var(--color-text)]">シーケンス管理</h1>
        <a
          href="/admin/sequences/new"
          class="px-6 py-2 bg-[var(--color-accent)] text-white rounded-lg hover:bg-[var(--color-accent-hover)] transition-colors"
        >
          新規作成
        </a>
      </div>
      <SequenceList client:load />
    </div>
  </SessionAuthProvider>
</AdminLayout>
